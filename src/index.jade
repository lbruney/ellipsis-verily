    script(type="text/javascript")
      :coffee
        $(document).ready ->
          $('[data-js-ellipsis-verily]').each ->
            data = $(@).attr('data-js-ellipsis-verily')
            data = data.replace(/\'/g, '"')
            data = JSON.parse(data)
            $(@).EllipsisVerily(data)
          return