    style(type="text/css")
      :stylus
        $light-grey = #eee
        $grey = #ccc
        $dark-grey = #333
        body 
          background-color $light-grey
          color $dark-grey
        a 
          color orange
          text-decoration none
          font-weight bold
          .ellipsis-handler
            border solid 1px $grey
            background-color $light-grey
            padding 5px
            border-radius 3px
        .make-ellipsis, .wrapper, .wrapper2
          width 70%
          margin auto 
          font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
          padding 5%
          border solid 1px $grey
          background-color white
        .crowd
          padding-right 10px
        .display-none
          display none 
        .display-inline, .visible-text
          display inline
        .text-center
          text-align center

